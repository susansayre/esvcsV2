\end_inset

and
\begin_inset Formula 
\begin{eqnarray*}
\beta\mu_{\priv|\se} & = & \frac{\sigma_{\env}\left(\rho_{\env\priv}-\sigShrS\rho_{\se\priv}\right)}{\sigma_{\priv}\left(1-\rho_{\se\priv}^{2}\right)}\left(\mu_{\priv}+\sigma_{\priv}\rho_{\se\priv}\se_{i}\right)\\
 & = & \frac{\sigma_{\env}\left(\rho_{\env\priv}-\sigShrS\rho_{\se\priv}\right)}{\sigma_{\priv}\left(1-\rho_{\se\priv}^{2}\right)}\mu_{\priv}+\frac{\rho_{\se\priv}\left(\rho_{\env\priv}-\sigShrS\rho_{\se\priv}\right)}{\left(1-\rho_{\se\priv}^{2}\right)}\sigma_{\env}\se_{i}
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\alpha+\beta\mu_{\priv|\se} & = & \meanE-\frac{\sigma_{\env}\left(\rho_{\env\priv}\rho_{\se\priv}-\sigShrS\right)}{\left(1-\rho_{\se\rp}^{2}\right)}\se_{i}-\frac{\sigma_{\env}\left(\rho_{\env\priv}-\sigShrS\rho_{\se\priv}\right)}{\sigma_{\priv}\left(1-\rho_{\se\priv}^{2}\right)}\mu_{\priv}-\offer_{i}+\frac{\sigma_{\env}\left(\rho_{\env\priv}-\sigShrS\rho_{\se\priv}\right)}{\sigma_{\priv}\left(1-\rho_{\se\priv}^{2}\right)}\mu_{\priv}+\frac{\rho_{\se\priv}\left(\rho_{\env\priv}-\sigShrS\rho_{\se\priv}\right)}{\left(1-\rho_{\se\priv}^{2}\right)}\sigma_{\env}\se_{i}\\
 & = & \meanE+\sigShrS\sigma_{\env}\se_{i}-\offer_{i}
\end{eqnarray*}

\end_inset

Finally, note that
\begin_inset Formula 
\[
\sigma_{\priv|\se}^{2}=\sigma_{\priv}^{2}\left(1-\rho_{\se\priv}^{2}\right)
\]

\end_inset

so
\begin_inset Formula 
\begin{eqnarray*}
\beta\sigma_{\priv|\se}^{2} & = & \frac{\sigma_{\env}\left(\rho_{\env\priv}-\sigShrS\rho_{\se\priv}\right)}{\sigma_{\priv}\left(1-\rho_{\se\priv}^{2}\right)}\sigma_{\priv}^{2}\left(1-\rho_{\se\priv}^{2}\right)\\
 & = & \sigma_{\env}\sigma_{\priv}\left(\rho_{\env\priv}-\sigShrS\rho_{\se\priv}\right).
\end{eqnarray*}

\end_inset

Putting all these pieces together, we have
\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i}\pub_{i},\Sigma\right)=-\sigma_{\env}\sigma_{\priv}\left(\rho_{\env\priv}-\sigShrS\rho_{\se\priv}\right)f_{\priv|\se,\pub}\left(\offer_{i}|\se_{i},\pub_{i}\right)+\left(\meanE+\sigShrS\sigma_{\env}\se_{i}-\offer_{i}\right)F_{\priv|\se,\pub}\left(\offer_{i}|\se_{i},\pub_{i}\right)
\]

\end_inset


\end_layout

\begin_layout Subsection
Expected value of no offer given upper bound
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
 & = & \intop_{-\infty}^{0}\intop_{-\infty}^{\infty}\env f_{\env|\priv,\pub}\left(\env|\priv,\pub_{i}\right)d\env f_{\priv|\pub,\priv\leq\bar{\priv}}\left(\priv\right)d\priv+\pub_{i}\intop_{0}^{\bar{\priv}}f_{\priv|\pub,\priv\leq\bar{\priv}}\left(\priv\right)d\priv\\
 & = & \frac{1}{F_{\priv|\pub_{i}}\left(\bar{\priv}\right)}\left[\intop_{-\infty}^{0}\mu_{\env|\priv,\pub}\left(\priv,\pub_{i}\right)f_{\priv|\pub}\left(\priv|\pub_{i}\right)d\priv+\pub_{i}\left(F_{\priv|\pub}\left(\bar{\priv}|\pub_{i}\right)-F_{\priv|\pub}\left(0|\pub_{i}\right)\right)\right]\\
 & = & \pub_{i}+\frac{1}{F_{\priv|\pub_{i}}\left(\bar{\priv}\right)}\left[\intop_{-\infty}^{0}\left(\mu_{\env}-\frac{\sigma_{\env}}{\sigma_{\rp}}\rho_{\env\rp}\left(\mu_{\rp}+\pub_{i}\right)+\frac{\sigma_{\env}}{\sigma_{\rp}}\rho_{\env\rp}\priv\right)f_{\priv|\pub}\left(\priv|\pub_{i}\right)d\priv-\pub_{i}F_{\priv|\pub}\left(0|\pub_{i}\right)\right]\\
 & = & \pub_{i}+\frac{1}{F_{\priv|\pub_{i}}\left(\bar{\priv}\right)}\left[\left(\mu_{\env}-\frac{\sigma_{\env}}{\sigma_{\rp}}\rho_{\env\rp}\left(\mu_{\rp}+\pub_{i}\right)+\frac{\sigma_{\env}}{\sigma_{\rp}}\rho_{\env\rp}\mu_{\priv|\pub}-\pub_{i}\right)F_{\priv|\pub}\left(0|\pub_{i}\right)-\sigma_{\env}\sigma_{\rp}\rho_{\env\rp}f_{\priv|\pub}\left(0|\pub_{i}\right)\right]\\
 & = & \pub_{i}+\frac{1}{F_{\priv|\pub_{i}}\left(\bar{\priv}\right)}\left[\left(\mu_{\env}-\frac{\sigma_{\env}}{\sigma_{\rp}}\rho_{\env\rp}\left(\mu_{\rp}+\pub_{i}\right)+\frac{\sigma_{\env}}{\sigma_{\rp}}\rho_{\env\rp}\left(\mu_{\rp}+\pub_{i}\right)-\pub_{i}\right)F_{\priv|\pub}\left(0|\pub_{i}\right)-\sigma_{\env}\sigma_{\rp}\rho_{\env\rp}f_{\priv|\pub}\left(0|\pub_{i}\right)\right]\\
 & = & \pub_{i}+\frac{1}{F_{\priv|\pub_{i}}\left(\bar{\priv}\right)}\left[\left(\mu_{\env}-\pub_{i}\right)F_{\priv|\pub}\left(0|\pub_{i}\right)-\sigma_{\env}\sigma_{\rp}\rho_{\env\rp}f_{\priv|\pub}\left(0|\pub_{i}\right)\right]
\end{eqnarray*}

\end_inset


