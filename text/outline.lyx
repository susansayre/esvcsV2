\begin_layout Standard
The regulator's single period payoff as a function of the payment offered
 is given by
\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i},\Sigma\right)=\intop_{-\infty}^{\offer_{i}}\intop_{-\infty}^{\infty}\left(\env-\offer_{i}\right)f_{\env|\se,\priv}\left(\env|\se_{i},\priv\right)d\env f_{\priv|\se}\left(\priv|\se_{i}\right)dp
\]

\end_inset

The multivariate normal assumption allows us to simplify this expression
 considerably.
 First, note that
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mu_{\env|\se,\priv}\left(\se_{i},\priv_{i}\right)=\frac{\sigma_{\env}\left(\rho_{\env\priv}-\rho_{\env\priv}\rho_{\se\priv}\right)}{\sigma_{\priv}\left(1-\rho_{\se\priv}^{2}\right)}\priv_{i}+\meanE+\frac{\sigma_{\env}\left(\rhoES-\rhoEP\rhoSP\right)}{\left(1-\rho_{\se\priv}^{2}\right)}\se_{i}-\frac{\sigma_{\env}\left(\rho_{\env\priv}-\rho_{\env\priv}\rho_{\se\priv}\right)}{\sigma_{\priv}\left(1-\rho_{\se\priv}^{2}\right)}\mu_{\priv}
\]

\end_inset

so the inner integral can be rewritten as
\begin_inset Formula 
\begin{eqnarray*}
\intop_{-\infty}^{\infty}\left(\env-\offer_{i}\right)f_{\env|\se,\priv}\left(\env|\se_{i},\priv\right)d\env & = & \intop_{-\infty}^{\infty}\env f_{\env|\se,\priv}\left(\env|\se_{i},\priv\right)d\env-\intop_{-\infty}^{\infty}\offer_{i}f_{\env|\se,\priv}\left(\env|\se_{i},\priv\right)d\env\\
 & = & \mu_{\env|\se,\priv}\left(\se_{i},\priv\right)-\offer_{i}\\
 & = & \frac{\sigma_{\env}\left(\rho_{\env\priv}-\rhoES\rho_{\se\priv}\right)}{\sigma_{\priv}\left(1-\rho_{\se\priv}^{2}\right)}\priv_{i}+\meanE+\frac{\sigma_{\env}\left(\rhoES-\rhoEP\rhoSP\right)}{\left(1-\rho_{\se\rp}^{2}\right)}\se_{i}-\frac{\sigma_{\env}\left(\rho_{\env\priv}-\rho_{\env\priv}\rho_{\se\priv}\right)}{\sigma_{\priv}\left(1-\rho_{\se\priv}^{2}\right)}\mu_{\priv}-\offer_{i}
\end{eqnarray*}

\end_inset

To simplify derivations, let 
\begin_inset Formula $\alpha=\meanE+\frac{\sigma_{\env}\left(\rhoES-\rhoEP\rhoSP\right)}{\left(1-\rho_{\se\priv}^{2}\right)}\se_{i}-\frac{\sigma_{\env}\left(\rho_{\env\priv}-\rho_{\env\priv}\rho_{\se\priv}\right)}{\sigma_{\priv}\left(1-\rho_{\se\priv}^{2}\right)}\mu_{\priv}-\offer_{i}$
\end_inset

 and let
\begin_inset Formula $\beta=\frac{\sigE\left(\bVal\right)}{\sigP\left(\cVal\right)}$
\end_inset

.
 The full first integral is thus
\begin_inset Formula 
\[
\intop_{-\infty}^{\offer_{i}}\left(\alpha+\beta p\right)f_{\priv|\se}\left(\priv|\se_{i}\right)dp
\]

\end_inset

or
\begin_inset Formula 
\[
\alpha F_{\priv|\se}\left(\offer_{i}|\se_{i}\right)+\beta\intop_{-\infty}^{\offer_{i}}pf_{\priv|\se}\left(\priv|\se_{i}\right)dp.
\]

\end_inset

The latter integral can also be simplified under the normality assumption
 to
\begin_inset Formula 
\[
\sigma_{\priv|\se}^{2}\left(-f_{\priv|\se}\left(\offer_{i}|\se_{i}\right)\right)+\mu_{\priv|\se,\pub}F_{\priv|\se}\left(\offer_{i}|\se_{i}\right).
\]

\end_inset

Combining elements, we have the full first integral as
\begin_inset Formula 
\[
\alpha F_{\priv|\se}\left(\offer_{i}|\se_{i}\right)+\beta\left(\sigma_{\priv|\se}^{2}\left(-f_{\priv|\se}\left(\offer_{i}|\se_{i}\right)\right)+\mu_{\priv|\se,\pub}F_{\priv|\se}\left(\offer_{i}|\se_{i}\right)\right)
\]

\end_inset

or
\begin_inset Formula 
\[
\left(\alpha+\beta\mu_{\priv|\se}\right)F_{\priv|\se}\left(\offer_{i}|\se_{i}\right)-\beta\sigma_{\priv|\se}^{2}f_{\priv|\se}\left(\offer_{i}|\se_{i}\right).
\]

\end_inset

 We also know that
\begin_inset Formula 
\[
\mu_{\priv|\se}=\mu_{\priv}+\sigma_{\priv}\rho_{\se\priv}\se_{i}
\]

\end_inset

and
\begin_inset Formula 
\begin{eqnarray*}
\beta\mu_{\priv|\se} & = & \frac{\sigE\left(\bVal\right)}{\sigP\left(\cVal\right)}\left(\mu_{\priv}+\sigma_{\priv}\rho_{\se\priv}\se_{i}\right)\\
 & = & \frac{\sigE\left(\bVal\right)}{\sigP\left(\cVal\right)}\mu_{\priv}+\frac{\rho_{\se\priv}\left(\bVal\right)}{\left(\cVal\right)}\sigma_{\env}\se_{i}
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\alpha+\beta\mu_{\priv|\se} & = & \meanE+\frac{\sigma_{\env}\rhoES\left(1-\rhoEP^{2}\right)}{\left(\cVal\right)}\se_{i}-\frac{\sigE\bVal}{\sigP\left(\cVal\right)}\mu_{\priv}-\offer_{i}+\frac{\sigE\bVal}{\sigP\left(\cVal\right)}\mu_{\priv}+\frac{\rhoES\rhoEP\bVal}{\left(\cVal\right)}\sigma_{\env}\se_{i}\\
 & = & \meanE+\rho_{\env\se}\sigma_{\env}\se_{i}-\offer_{i}
\end{eqnarray*}

\end_inset

Finally, note that
\begin_inset Formula 
\[
\sigma_{\priv|\se}^{2}=\sigma_{\priv}^{2}\left(\cVal\right)
\]

\end_inset

so
\begin_inset Formula 
\begin{eqnarray*}
\beta\sigma_{\priv|\se}^{2} & = & \sigma_{\env}\sigma_{\priv}\bVal.
\end{eqnarray*}

\end_inset

Putting all these pieces together, we have
\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i},\Sigma\right)=-\sigma_{\env}\sigma_{\priv}\bVal f_{\priv|\se}\left(\offer_{i}|\se_{i}\right)+\left(\meanE+\rho_{\env\se}\sigma_{\env}\se_{i}-\offer_{i}\right)F_{\priv|\se}\left(\offer_{i}|\se_{i}\right)
\]

\end_inset


