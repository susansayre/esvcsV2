\end_inset

giving us
\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i}\pub_{i},\Sigma\right)=\pub_{i}+F_{N}\left(\frac{\ubPriv-\pub_{i}-\meanP-\rho_{\se\rp}\frac{\sigma_{\rp}}{\sigma_{\se}}\se_{i}}{\sigma_{\rp}\sqrt{1-\rho_{\se\rp}^{2}}}\right)^{-1}\left[\left(\meanE+\se_{i}-\offer_{i}-\pub_{i}\right)F_{N}\left(\frac{\offer_{i}-\meanP-\pub_{i}-\rho_{\se\rp}\frac{\sigma_{\rp}}{\sigma_{\se}}\se_{i}}{\sigma_{\rp}\sqrt{1-\rho_{\se\rp}^{2}}}\right)-\frac{\rho_{\re\rp}\sigma_{\re}\sigma_{\rp}}{\sigma_{\rp}\sqrt{1-\rho_{\se\rp}^{2}}}f_{N}\left(\frac{\offer_{i}-\meanP-\pub_{i}-\rho_{\se\rp}\frac{\sigma_{\rp}}{\sigma_{\se}}\se_{i}}{\sigma_{\rp}\sqrt{1-\rho_{\se\rp}^{2}}}\right)\right]
\]

\end_inset

Let
\begin_inset Formula $\mu_{\priv|\se,\pub}\left(\se_{i},\pub_{i}\right)=\meanP+\pub_{i}+\rho_{\se\rp}\frac{\sigma_{\rp}}{\sigma_{\se}}\se_{i}$
\end_inset

 and 
\begin_inset Formula $\sigma_{\priv|\se,\pub}=\sigma_{\rp}\sqrt{1-\rho_{\se\rp}^{2}}$
\end_inset

 be the conditional mean and variance of 
\begin_inset Formula $\priv_{i}$
\end_inset

 given the regulator's information, letting us write
\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i}\pub_{i},\Sigma\right)=\pub_{i}+F_{N}\left(\frac{\bar{\priv}-\mu_{\priv|\se,\pub}\left(\se_{i},\pub_{i}\right)}{\sigma_{\priv|\se,\pub}}\right)^{-1}\left[\left(\meanE+\se_{i}-\offer_{i}-\pub_{i}\right)F_{N}\left(\frac{\offer_{i}-\mu_{\priv|\se,\pub}\left(\se_{i},\pub_{i}\right)}{\sigma_{\priv|\se,\pub}}\right)-\sigma_{\re}\frac{\rho_{\re\rp}}{\sqrt{1-\rho_{\se\rp}^{2}}}f_{N}\left(\frac{\offer_{i}-\mu_{\priv|\se,\pub}\left(\se_{i},\pub_{i}\right)}{\sigma_{\priv|\se,\pub}}\right)\right].
\]

\end_inset


\end_layout

