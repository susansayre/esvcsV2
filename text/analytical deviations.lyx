\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i}\pub_{i},\Sigma\right)=\left(\meanE+\se_{i}-\offer_{i}-\pub_{i}\right)\frac{F_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)}{F_{\rp|\se}\left(\ubRpi|\se_{i}\right)}+\pub_{i}+\frac{1}{F_{\rp|\se}\left(\ubRpi|\se_{i}\right)}\left(\alpha\se_{i}\intop_{-\infty}^{\offer_{i}-\meanP-\pub_{i}}f_{\rp|\se}\left(\rp|\se_{i}\right)d\rp+\beta\intop_{-\infty}^{\offer_{i}-\meanP-\pub_{i}}\rp f_{\rp|\se}\left(\rp|\se_{i}\right)d\rp\right).
\]

\end_inset

Simplifying, we have
\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i}\pub_{i},\Sigma\right)=\left(\meanE+\left(\alpha+1\right)\se_{i}-\offer_{i}-\pub_{i}\right)\frac{F_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)}{F_{\rp|\se}\left(\ubRpi|\se_{i}\right)}+\pub_{i}+\frac{\beta}{F_{\rp|\se}\left(\ubRpi|\se_{i}\right)}\intop_{-\infty}^{\offer_{i}-\meanP-\pub_{i}}\rp f_{\rp|\se}\left(\rp|\se_{i}\right)d\rp.
\]

\end_inset

Note that
\begin_inset Formula 
\[
\intop_{-\infty}^{\offer_{i}-\meanP-\pub_{i}}\rp f_{\rp|\se}\left(\rp|\se_{i}\right)d\rp=-\sigma_{\rp|\se}^{2}f_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)+\mu_{\rp|\se}F_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)
\]

\end_inset

Moreover, since 
\begin_inset Formula $\rp_{i}$
\end_inset

 and 
\begin_inset Formula $\se_{i}$
\end_inset

 have a multivariate normal distribution, we know that 
\begin_inset Formula 
\[
\rp_{i}|\se_{i}\sim N\left(\frac{\sigma_{\se\rp}}{\sigma_{\se}^{2}}\se_{i},\sigma_{\rp}^{2}-\frac{\sigma_{\se\rp}^{2}}{\sigma_{\se}^{2}}\right)
\]

\end_inset

or
\begin_inset Formula 
\[
\rp_{i}|\se_{i}\sim N\left(\rho_{\se\rp}\frac{\sigma_{\rp}}{\sigma_{\se}}\se_{i},\sigma_{\rp}^{2}\left(1-\rho_{\se\rp}^{2}\right)\right)
\]

\end_inset

so the standard deviation is 
\begin_inset Formula $\sigma_{\rp}\sqrt{1-\rho_{\se\rp}^{2}}$
\end_inset

.
 Making these two substitutions, we have
\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i}\pub_{i},\Sigma\right)=\left(\meanE+\left(\alpha+1\right)\se_{i}-\offer_{i}-\pub_{i}\right)\frac{F_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)}{F_{\rp|\se}\left(\ubRpi|\se_{i}\right)}+\pub_{i}+\frac{\beta}{F_{\rp|\se}\left(\ubRpi|\se_{i}\right)}\left(-\sigma_{\rp}^{2}\left(1-\rho_{\se\rp}^{2}\right)f_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)+\rho_{\se\rp}\frac{\sigma_{\rp}}{\sigma_{\se}}\se_{i}F_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)\right).
\]

\end_inset

Simplifying, we have
\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i}\pub_{i},\Sigma\right)=\left(\meanE+\left(\alpha+1+\beta\rho_{\se\rp}\frac{\sigma_{\rp}}{\sigma_{\se}}\se_{i}\right)\se_{i}-\offer_{i}-\pub_{i}\right)\frac{F_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)}{F_{\rp|\se}\left(\ubRpi,\se_{i}\right)}+\pub_{i}-\beta\left(\sigma_{\rp}^{2}\left(1-\rho_{\se\rp}^{2}\right)\right)\frac{f_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)}{F_{\rp|\se}\left(\ubRpi,\se_{i}\right)}.
\]

\end_inset

Note that 
\begin_inset Formula 
\[
\beta\rho_{\se\rp}\frac{\sigma_{\rp}}{\sigma_{\se}}=\frac{\rho_{\re\rp}}{\left(1-\rho_{\se\rp}^{2}\right)}\frac{\sigma_{\re}}{\sigma_{\rp}}\rho_{\se\rp}\frac{\sigma_{\rp}}{\sigma_{\se}}=\frac{\rho_{\re\rp}\rho_{\se\rp}}{\left(1-\rho_{\se\rp}^{2}\right)}\frac{\sigma_{\re}}{\sigma_{\se}}
\]

\end_inset

so
\begin_inset Formula 
\[
\alpha+1+\beta\rho_{\se\rp}\frac{\sigma_{\rp}}{\sigma_{\se}}=\frac{\rho_{\re\rp}\rho_{\se\rp}}{\left(1-\rho_{\se\rp}^{2}\right)}\frac{\sigma_{\re}}{\sigma_{\se}}-\rho_{\se\rp}\frac{\rho_{\re\rp}}{\left(1-\rho_{\se\rp}^{2}\right)}\frac{\sigma_{\re}}{\sigma_{\se}}+1=1.
\]

\end_inset

Moreover,
\begin_inset Formula 
\[
\beta\left(\sigma_{\rp}^{2}\left(1-\rho_{\se\rp}^{2}\right)\right)=\frac{\rho_{\re\rp}}{\left(1-\rho_{\se\rp}^{2}\right)}\frac{\sigma_{\re}}{\sigma_{\rp}}\sigma_{\rp}^{2}\left(1-\rho_{\se\rp}^{2}\right)=\rho_{\re\rp}\sigma_{\re}\sigma_{\rp}.
\]

\end_inset

Combining all these elements together, we have
\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i}\pub_{i},\Sigma\right)=\left(\meanE+\se_{i}-\offer_{i}-\pub_{i}\right)\frac{F_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)}{F_{\rp|\se}\left(\ubRpi|\se_{i}\right)}+\pub_{i}-\rho_{\re\rp}\sigma_{\re}\sigma_{\rp}\frac{f_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)}{F_{\rp|\se}\left(\ubRpi|\se_{i}\right)}.
\]

\end_inset

or
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\payEnd\left(\offer_{i},\se_{i}\pub_{i},\Sigma\right)=\pub_{i}+\frac{1}{F_{\rp|\se}\left(\ubRpi|\se_{i}\right)}\left(\meanE+\se_{i}-\offer_{i}-\pub_{i}\right)F_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)-\rho_{\re\rp}\sigma_{\re}\sigma_{\rp}\frac{f_{\rp|\se}\left(\offer_{i}-\meanP-\pub_{i}|\se_{i}\right)}{F_{\rp|\se}\left(\ubRpi|\se_{i}\right)}.
